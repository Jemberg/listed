<%= react_component("AuthorSettings", props: {
    author: @author.as_json(
        only: [
            :id,
            :username,
            :display_name,
            :bio,
            :link,
            :twitter,
            :email,
            :meta_image_url,
            :header_image_url,
            :guestbook_disabled,
            :newsletter_disabled, 
            :hide_from_homepage,
            :secret
        ],
        methods: [:accessible_via],
        include: :credentials
    ),
    authenticityToken: form_authenticity_token
}) %>
