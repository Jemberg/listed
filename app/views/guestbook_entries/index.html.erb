<% sent = params[:sent] %>
<% new_author_guestbook_entry_url = new_author_guestbook_entry_path(@author) %>
<% show_simple_captcha %>

<%= react_component("Guestbook", props: {
    sent: sent,
    author: @author.as_json(
        only: :id,
        methods: [:title, :url]
    ),
    entries: @entries.as_json(
        only: [:id, :text]
    ),
    newAuthorGuestbookEntryUrl: new_author_guestbook_entry_url,
    simpleCaptchaKey: simple_captcha_key,
    simpleCaptchaImageUrl: simple_captcha_image_url(simple_captcha_key)
}) %>
