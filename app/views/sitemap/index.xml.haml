!!! XML
- if @domain_author
  %urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
    %url
      %loc= @domain_author.url
      %changefreq weekly
      %priority 0.75

    - for post in @posts
      %url
        %loc= post.author_relative_url
        %lastmod=post.updated_at.strftime('%Y-%m-%d')
        %changefreq monthly
- else
  %sitemapindex{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
    - for page in @post_pages
      %sitemap
        %loc= "#{ENV['HOST']}/sitemap-posts-#{page}.xml"
    - for page in @author_pages
      %sitemap
        %loc= "#{ENV['HOST']}/sitemap-authors-#{page}.xml"